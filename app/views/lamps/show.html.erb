<div class="row">
  <div class="large-10 large-centered columns text-center">

    <h4 id="link_to_lamps"><%= link_to "Return to lamps", user_path(current_user) %></h4>
      <div class="lamplist">
        <div class="lamptitle">
          Lamp <%=@lamp.light_identifier%>
        </div>

        <div class="imageblock">
          <% if @lamp.on %>
            <img alt="Arrow on" src='/images/arrow_on.png'>
          <% else %>
            <img alt="Arrow off" src='/images/arrow_off.png'>
          <% end %>
        </div>

      <div class="lampform">
        <%= render "/lamps/lampform", :lamp => @lamp %>
      </div>

  </div>
</div>
